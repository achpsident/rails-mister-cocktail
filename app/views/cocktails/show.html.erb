<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-12">

<% @cocktail.doses.each do |dose| %>
  <p> <%=dose.description %><%= dose.ingredient.name %> </p>
